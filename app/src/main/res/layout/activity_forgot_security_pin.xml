<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#ffffff"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotSecurityPIN">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back_24"
        android:background="@color/bar"
        android:id="@+id/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/Heading1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Forgot security PIN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Enrolment_Number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enrolment Number*"
            android:maxLength="16"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verifyEnrollmentNumber"
            android:textStyle="italic"
            android:layout_marginTop="1dp"
            android:text="Verify your Enrolment number"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/back"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:id="@+id/forgotSecurityNextBtn"
            android:text="Next"
            android:textSize="20sp"
            android:elevation="0dp"
            app:cornerRadius="5dp"
            app:shapeAppearance="@null"/>


    </LinearLayout>

</LinearLayout>