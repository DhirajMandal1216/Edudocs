<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OTPVarify">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back_24"
        android:background="@color/bar"
        android:id="@+id/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/Heading1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Verify OTP"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:id="@+id/Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EduDoc has sent you an OTP to your registered"
            android:textSize="16sp"
            android:textStyle="normal"

            />
        <TextView
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mobile (xxxxxx0000)"
            android:textSize="16sp"
            android:textStyle="normal"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:id="@+id/Security_PIN"
            android:hint="Enter OTP*"
            android:maxLength="4"
            android:inputType="numberPassword"
            android:drawableRight="@drawable/remove_red_eye_24"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:padding="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wait few minute for the OTP to arrive"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="normal"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do not refresh or close!"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/back"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:id="@+id/VerifyOTPBtn"
            android:text="Verify"
            android:textSize="20sp"
            android:elevation="0dp"
            app:cornerRadius="5dp"
            app:shapeAppearance="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did not get the OTP?"
                android:layout_marginLeft="50dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="normal"
                android:padding="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resendOTP"
                android:text="Resend OTP"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="normal"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>