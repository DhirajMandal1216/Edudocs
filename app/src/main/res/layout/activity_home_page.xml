<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#ffffff"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <!-- Toolbar -->

    <!-- Tab Layout -->
    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="623dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="-3dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="EduDocs"
            android:textColor="@android:color/black"
            android:fontFamily="@font/sofia_sans_bold"
            android:textSize="27dp" />

    </LinearLayout>
    <!-- Page Layout -->
    <LinearLayout
        android:id="@+id/page_layout"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Content will be displayed here -->

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tab_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/tab_home"
            android:clickable="true"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_home_icon"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/tab_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/black"
                android:fontFamily="@font/sofia_sans_bold"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_notes"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_notes_icon"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/notes" />

            <TextView
                android:id="@+id/tab_notes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@android:color/black"
                android:fontFamily="@font/sofia_sans_bold"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_documents"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_documents_icon"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/doc" />

            <TextView
                android:id="@+id/tab_documents_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Docs"
                android:textColor="@android:color/black"
                android:fontFamily="@font/sofia_sans_bold"
                android:textSize="23dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_profile"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_profile_icon"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/tab_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@android:color/black"
                android:fontFamily="@font/sofia_sans_bold"
                android:textSize="23dp" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>